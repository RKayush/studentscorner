<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layouts/header'); %>
    <link rel="stylesheet" href="../css/navbar.css">
    <link rel="stylesheet" href="../css/loginsignup.css">
</head>

    <% if(errors!=null && errors.length>0){%>
        <style>
            .login_error,
            .signup_error {
                display: block;
            }
        </style> 
    <%}%>

<body>        
    <%- include('layouts/navbar'); %>        

    <div class="container">
    <% if(errors!=null && errors.length>0){%>
        
        <div class="login_error">
            <p><%=errors[0]%>
            </p> 
        </div>

        <div class="signup_error">
            <p><%=errors[0]%>
            </p>
        </div>

        <%}%>
        <div class="main" id="mainPage1">
            <div class="main_heading">
                <h1>Sign up</h1>
            </div>

            <form method="POST" action="/loginsignup/userRegistration" enctype="multipart/form-data">
                <label for="username" class="labels">Username*</label>
                <%
                    if(username=="" || username!="defined" || username=="Username is taken.Try a different one!"){%>
                        <input type="text" name="username" id="userName" class="input-holders" placeholder="<%= username%>" required>
                    <%}
                    else{%>
                        <input type="text" name="username" id="userName" class="input-holders" value="<%= username%>" required>
                    <%}
            
                %>

                <label for="name" class="labels">Name*</label>
                <input type="text" name="name" id="Name" class="input-holders" value="<%= name%>" required>

                <label for="useremail" class="labels">Email*</label>
                <%
                    if(email=="" || email!="defined" || email=="Email address is taken!"){%>
                        <input type="email" name="email" id="UserEmail" class="input-holders" placeholder="<%= email%>" required>
                    <%}
                    else{%>
                        <input type="email" name="email" id="UserEmail" class="input-holders" value="<%= email%>" required>
                    <%}
                %>
                <label for="Password" class="labels">Password*</label>
                <input type="password" name="password" id="userPassword" class="input-holders" value="<%=password%>" required>

                <input type="submit" value="Sign up" name="submit">
            </form>
            <div class="rdt_link">
                <p>Already a user? </p>
                <a id="switchLS" onclick="tab_to_login()">Login</a>
            </div>
        </div>


        <div class="main-2" id="mainPage2">
            <div class="main_heading-2">
                <h1>Login</h1>
            </div>

            <form action="/loginsignup/loginUser" method="POST" enctype="multipart/form-data" id="form_2">
                <label for="userName" class="labels">Username*</label>
                <input type="text" name="username" id="userName" class="input-holders-2" required>

                <!-- <label for="Name" class="labels">Name*</label>
                <input type="text" name="name" id="Name" class="input-holders-2" required> -->
                <!-- 
                <label for="userEmail" class="labels">Email*</label>
                <input type="email" name="user-email" id="UserEmail" class="input-holders-2" required> -->

                <label for="Password" class="labels">Password*</label>
                <input type="password" name="password" id="userPassword" class="input-holders-2" required>
                <!-- <a href="#" id="forgot_link">Forgot Password?</a> -->

                <input type="submit" value="Login" name="submit">
            </form>
            <div class="rdt_link-2">
                <p>Not a member?</p> 
                <a id="switchLS" onclick="tab_to_signup()">Sign up</a>
            </div>
        </div>
        <div class="side_design">

            <h2 id="welcome">Welcome</h2>
            <img src="../assets/img/loginsignup/vecteezy new.jpg">
        </div>
    </div>
    <%- include('layouts/scripts'); -%>
</body>
    
</html>
